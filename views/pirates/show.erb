<h1>Display your Pirate here</h1>
<div class="pirate">
  <h2>Name: <% @pirate.name %></h2><br>
  <h3>Weight: <% @pirate.weight %> pounds </h3><br>
  <h4>Height: <% @pirate.height %> inches</h4><br>
</div>

<h2>Display your first ship here</h2>
<% @ships.each do |ship| %>
<div class="ship">
  <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>